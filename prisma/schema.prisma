// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}


model Movie {
  id Int @id @default(autoincrement())    // @id because it's the primary key || and @default to set default value
  createdAt DateTime @default(now())    // now()  is the current server date
  updatedAt DateTime @updatedAt         // @updatedAt returns the last time the model got updated
  title String
  description String
  genre String
  releaseDate DateTime
  ratint Float?                         // ? means optional
}